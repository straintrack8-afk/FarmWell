import React, { useState, useEffect } from 'react';
import { useNavigate } from 'react-router-dom';
import { useLanguage } from '../../../../contexts/LanguageContext';
import { getLocalizedText, getAllSavedAssessments, createNewAssessment, setCurrentAssessmentId, clearAssessment } from '../../utils/assessmentUtils';
import '../../poultry.css';

function BroilerAssessmentLanding() {
    const navigate = useNavigate();
    const { language } = useLanguage();
    const [assessmentData, setAssessmentData] = useState(null);
    const [savedAssessments, setSavedAssessments] = useState([]);

    useEffect(() => {
        // Load assessment data
        fetch('/data/poultry/broiler_assessment.json')
            .then(res => res.json())
            .then(data => setAssessmentData(data))
            .catch(err => console.error('Failed to load assessment data:', err));
        
        // Load all saved assessments
        loadSavedAssessments();
    }, []);

    const loadSavedAssessments = () => {
        const allAssessments = getAllSavedAssessments();
        const assessmentList = Object.values(allAssessments);
        // Sort by last modified (most recent first)
        assessmentList.sort((a, b) => new Date(b.lastModified) - new Date(a.lastModified));
        setSavedAssessments(assessmentList);
        console.log('Loaded assessments:', assessmentList);
    };

    const handleStartNewAssessment = () => {
        // Create new assessment without clearing old ones
        const newId = createNewAssessment();
        console.log('Created new assessment:', newId);
        navigate('/poultry/biosecurity/assessment');
    };

    const handleContinueAssessment = (assessmentId) => {
        // Set as current assessment and navigate
        setCurrentAssessmentId(assessmentId);
        console.log('Continuing assessment:', assessmentId);
        navigate('/poultry/biosecurity/assessment');
    };

    const handleDeleteAssessment = (assessmentId, e) => {
        e.stopPropagation();
        if (confirm('Delete this assessment? This action cannot be undone.')) {
            clearAssessment(assessmentId);
            loadSavedAssessments();
        }
    };

    if (!assessmentData) {
        return (
            <div style={{
                minHeight: '100vh',
                background: 'linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%)',
